<div class="six columns alpha">
	<% form_tag(arrival_find_stop_path, :method => 'get') do %>
		<h4>Paso 3 de 3</h4>
		<p>Seleccioná la intersección. </p>
		<fieldset>
			<label for="intersection"> Intersección </label>
			<%= select("intersection", "id", @intersections.collect {|street| [street['desc'],street['id']]} ) %>
			<%= hidden_field_tag "line", params[:line] %>
			<%= hidden_field_tag "street", @street%>
		</fieldset>
		<%= submit_tag "Buscar" %>
	<% end %>
</div>