<div class="page-header">
<h1>Iniciar sesión</h1>
</div>

<div class="row">
  <div class="span8">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class=> "form-stacked" }) do |f| %>
      <fieldset>
        <div class="clearfix">
          <%= f.label :email %>
          <div class="input">
            <%= f.email_field :email %>
          </div>
        </div>

        <div class="clearfix">
          <%= f.label :password, "Contraseña" %>
          <div class="input">
            <%= f.password_field :password %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="clearfix">
            <div class="input">
              <%= f.check_box :remember_me %> <span>Recordar usuario</span>
            </div>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Iniciar sesión", :class =>"btn primary" %>
        </div>
      </fieldset>
    <% end %>

  </div>
  <div class="span4">
    <%= render :partial => "devise/shared/links" %>
  </div>
</div>