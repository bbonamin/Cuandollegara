<div class="page-header">
<h1>Registrarse</h1>
</div>

<div class="row">
  <div class="span8">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class=> "form-stacked" }) do |f| %>
      <fieldset>
        <%= devise_error_messages! %>

        <div class="clearfix">
          <%= f.label :email %>
          <div class="input">
            <%= f.email_field :email %>
          </div>
        </div>

        <div class="clearfix">
          <%= f.label :password, "ContraseÃ±a" %>
          <div class="input">
            <%= f.password_field :password %>
          </div>
        </div>

        <div class="clearfix">
          <%= f.label :password_confirmation, "Confirmar contraseÃ±a" %>
          <div class="input">
            <%= f.password_field :password_confirmation %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Registrarse", :class => "btn primary" %>
        </div>
      </fieldset>
    <% end %>
  </div>

  <div class="span6">
    <%= render :partial => "devise/shared/links" %>
  </div>
</div>
